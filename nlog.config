<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="\logs\nlog-INTERNAL.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
		<add assembly="NLog.Extensions.Logging" />
		<add assembly="NLog.Web" />
	</extensions>

	<!-- the targets to write to -->
	<targets async="true">
		<!-- File Target for own log messages with extra web details using some ASP.NET core renderers -->
		<target xsi:type="File" name="ServiceSimplified_File" fileName="\logs\ServiceLog-Simplified-${shortdate}.txt" maxArchiveFiles="7"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

		<!-- Uses Microsoft Console Target to write detailed ASP.NET Logs to a file -->
		<target xsi:type="File" name="Service_File" fileName="\logs\ServiceLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />

		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<target xsi:type="Console" name="Service_Console" layout="${MicrosoftConsoleLayout}" />
	
		<!-- Namespace Logg Files -->
	
		<!-- System.Net.Http -->
		<target xsi:type="File" name="Networking_File" fileName="\logs\NetworkLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />

		<!-- JWTSecurityToken -->
		<target xsi:type="File" name="JwtAuthentication_File" fileName="\logs\AuthenticationLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />

		<!-- Api (Controller/Endpoints) -->
		<target xsi:type="File" name="Api_File" fileName="\logs\ApiLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />

		<!-- Autorun -->
		<target xsi:type="File" name="Autorun_File" fileName="\logs\AutorunLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />

		<!-- Configuration -->
		<target xsi:type="File" name="Configuration_File" fileName="\logs\ConfigurationLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />

		<!-- Database -->
		<target xsi:type="File" name="Database_File" fileName="\logs\DatabaseLog-${shortdate}.txt" maxArchiveFiles="7"
				layout="${MicrosoftConsoleLayout}" />
	</targets>
		
	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="Trace" writeTo="allfile" />

		<!--Output hosting lifetime messages to console target for faster startup detection -->
		<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="lifetimeConsole, ownFile-web" final="true" />

		<!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
		<logger name="Stressless_Service.Logic" minlevel="Trace" writeTo="Networking_File" final="True" />
		<logger name="System.Net.Http.*" minlevel="Trace" writeTo="Networking_File" final="true" />
		<logger name="Stressless_Service.JwtSecurityTokens" minlevel="Trace" writeTo="JwtAuthentication_File" final="true" />
		<logger name="Stressless_Service.Controllers" minlevel="Trace" writeTo="Api_File" final="true" />
		<logger name="Stressless_Service.Autorun" minlevel="Trace" writeTo="Autorun_File" final="true" />
		<logger name="Stressless_Service.Configuration" minlevel="Trace" writeTo="Configuration_File" final="true" />
		<logger name="Stressless_Service.Database" minlevel="Trace" writeTo="Database_File" final="True" />
		
	</rules>
</nlog>